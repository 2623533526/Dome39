<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.Main2Activity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="15dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/rb0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="全部订单"
                    android:button="@null"
                    android:background="@drawable/sel"
                    android:drawableTop="@mipmap/quanbu"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                </RadioButton>
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="0dp"
                    android:background="@drawable/sel"
                    android:layout_weight="1"
                    android:text="未支付"
                    android:button="@null"
                    android:drawableTop="@mipmap/fukuan"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                </RadioButton>
                <RadioButton
                    android:id="@+id/rb2"
                    android:background="@drawable/sel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="未收货"
                    android:button="@null"
                   android:drawableTop="@mipmap/shohuo"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                </RadioButton>
                <RadioButton
                    android:id="@+id/rb3"
                    android:background="@drawable/sel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="未评价"
                    android:button="@null"
                    android:drawableTop="@mipmap/pingjia"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                </RadioButton>
                <RadioButton
                    android:id="@+id/rb9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="已完成"
                    android:button="@null"
                    android:drawableTop="@mipmap/wancheng"
                    android:gravity="center"
                    android:background="@drawable/sel"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                </RadioButton>
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="15dp"
        android:layout_weight="9">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>
    </androidx.cardview.widget.CardView>
</LinearLayout>